<UserControl x:Class="MLVApplication.Content.BookSelected"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MLVApplication.Content"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>

        <StackPanel Orientation="Horizontal">
            
            <StackPanel Margin="2">
            <TextBlock>
             <TextBlock Style="{StaticResource Heading2}" FontWeight="DemiBold">Panier: </TextBlock> <TextBlock Name="nbBooks"  Style="{StaticResource Heading2}"/>
            </TextBlock>
        </StackPanel>
<Separator />
            <StackPanel Margin="2">
            <TextBlock>
             <TextBlock Style="{StaticResource Heading2}" FontWeight="DemiBold">Total: </TextBlock> <TextBlock Name="total"  Style="{StaticResource Heading2}" />
            </TextBlock>
        </StackPanel>

        </StackPanel>

    </Grid>
</UserControl>
